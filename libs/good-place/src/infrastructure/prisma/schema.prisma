// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              String   @id
  title           String
  author          String
  price           Float
  imageUrl        String
  publicationDate DateTime
  description     String
  published       Boolean
  seller          String
  createdAt       DateTime
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CLIENT)
  createdAt DateTime
}

enum UserRole {
  ADMIN
  MODERATOR
  CLIENT
  SELLER
}
