// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              String   @id
  title           String
  author          String
  price           Float
  imageUrl        String
  publicationDate DateTime
  description     String
  published       Boolean
  createdAt       DateTime
  seller          User     @relation(fields: [sellerId], references: [id])
  sellerId        String
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CLIENT)
  avatarUrl String
  createdAt DateTime
  Book      Book[]
}

enum UserRole {
  ADMIN
  MODERATOR
  CLIENT
  SELLER
}
